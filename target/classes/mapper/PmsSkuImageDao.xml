<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.PmsSkuImageDao">

    <resultMap type="com.example.demo.entity.PmsSkuImage" id="PmsSkuImageMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="skuId" column="sku_id" jdbcType="INTEGER"/>
        <result property="imgName" column="img_name" jdbcType="VARCHAR"/>
        <result property="imgUrl" column="img_url" jdbcType="VARCHAR"/>
        <result property="productImgId" column="product_img_id" jdbcType="INTEGER"/>
        <result property="isDefault" column="is_default" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PmsSkuImageMap">
        select
          id, sku_id, img_name, img_url, product_img_id, is_default
        from gmall.pms_sku_image
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PmsSkuImageMap">
        select
          id, sku_id, img_name, img_url, product_img_id, is_default
        from gmall.pms_sku_image
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PmsSkuImageMap">
        select
          id, sku_id, img_name, img_url, product_img_id, is_default
        from gmall.pms_sku_image
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="skuId != null">
                and sku_id = #{skuId}
            </if>
            <if test="imgName != null and imgName != ''">
                and img_name = #{imgName}
            </if>
            <if test="imgUrl != null and imgUrl != ''">
                and img_url = #{imgUrl}
            </if>
            <if test="productImgId != null">
                and product_img_id = #{productImgId}
            </if>
            <if test="isDefault != null and isDefault != ''">
                and is_default = #{isDefault}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into gmall.pms_sku_image(sku_id, img_name, img_url, product_img_id, is_default)
        values (#{skuId}, #{imgName}, #{imgUrl}, #{productImgId}, #{isDefault})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update gmall.pms_sku_image
        <set>
            <if test="skuId != null">
                sku_id = #{skuId},
            </if>
            <if test="imgName != null and imgName != ''">
                img_name = #{imgName},
            </if>
            <if test="imgUrl != null and imgUrl != ''">
                img_url = #{imgUrl},
            </if>
            <if test="productImgId != null">
                product_img_id = #{productImgId},
            </if>
            <if test="isDefault != null and isDefault != ''">
                is_default = #{isDefault},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from gmall.pms_sku_image where id = #{id}
    </delete>

</mapper>